{
  "name": "collaborative-document-platform",
  "version": "1.0.0",
  "description": "A scalable, real-time, multi-tenant collaborative document platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "audit:multi-tenant": "node src/scripts/auditMultiTenancy.js",
    "docker:build": "docker build -t collab-doc-platform .",
    "docker:build:prod": "docker build --target production -t collab-doc-platform:prod .",
    "docker:build:dev": "docker build --target development -t collab-doc-platform:dev .",
    "docker:run": "docker run -p 5000:5000 collab-doc-platform",
    "docker:dev": "docker-compose up --build",
    "docker:dev:tools": "docker-compose --profile tools up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:monitoring": "docker-compose -f docker-compose.prod.yml --profile monitoring up -d",
    "docker:prod:full": "docker-compose -f docker-compose.prod.yml --profile proxy --profile monitoring up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:app": "docker-compose logs -f app",
    "docker:stop": "docker-compose down",
    "docker:stop:prod": "docker-compose -f docker-compose.prod.yml down",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "docker:test": "docker build --target testing -t collab-doc-test . && docker run --rm collab-doc-test"
  },
  "keywords": [
    "collaborative",
    "document",
    "real-time",
    "multi-tenant",
    "websocket",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/jest": "^29.5.8",
    "babel-jest": "^30.0.4",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
